<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#070036"
    tools:context=".Six_Months">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">




        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/etn_new_final_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="6 Month Courses"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/firstAidImage"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/first_aid_symbol" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-- First-Aid --"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:textColor="@color/white"
            />

        <ImageView
            android:id="@+id/sewingImage"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/sewing" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-- Sewing --"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:textColor="@color/white"
            />

        <ImageView
            android:id="@+id/landscapingImage"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/landscaping" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-- Landscaping --"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:textColor="@color/white"
            />

        <ImageView
            android:id="@+id/lifeSkillsImage"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/lifeskills" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-- Life Skills --"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:textColor="@color/white"
            />

    </LinearLayout>
</ScrollView>