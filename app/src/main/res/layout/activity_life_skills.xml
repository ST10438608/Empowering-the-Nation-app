<?xml version="1.0" encoding="utf-8"?>



<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#070036"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:src="@drawable/lifeskills" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Life Skills"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:paddingTop="5dp"
            android:text="Why Enroll?"
            android:textColor="@color/gold"
            android:textSize="30sp"  />

        <TextView
            android:id="@+id/companyDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Master the skills needed to manage personal and professional life challenges with confidence and purpose. Whether you're looking to improve your communication, financial literacy, or emotional intelligence, this course offers valuable tools for self-development."
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:paddingTop="5dp" />

        <TextView
            android:id="@+id/header2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:paddingTop="5dp"
            android:text="Purpose"
            android:textColor="@color/gold"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/purpose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This course is designed to help individuals develop practical life skills, including time management, budgeting, and decision-making, that can enhance both personal and professional growth. Throughout the Life Skills course, youâ€™ll work on practical projects like creating a personal budget, drafting simple documents, and improving everyday math skills. By the end, you'll have a portfolio of essential life tools and resources to support personal growth and make a strong impression in any work or home setting."
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:paddingTop="5dp" />

        <TextView
            android:id="@+id/header3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:paddingTop="5dp"
            android:text="Fees"
            android:textColor="#FFD700"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/fees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:paddingTop="5dp"
            android:text="This course will take 6 months to complete.
Fees are R1500"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="155dp"
            android:layout_height="59dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#BCB88A"
            android:text="Back"
            android:textColor="#0C0C0C" />

        <Button
            android:id="@+id/feesButton"
            android:layout_width="155dp"
            android:layout_height="59dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="50dp"
            android:backgroundTint="#BCB88A"
            android:text="Book Course"
            android:textColor="#0C0C0C" />


    </LinearLayout>

</ScrollView>
