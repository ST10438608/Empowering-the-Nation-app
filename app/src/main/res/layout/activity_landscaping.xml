<?xml version="1.0" encoding="utf-8"?>



<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#070036"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/landscaping"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-condensed"
            android:text="Landscaping"
            android:textColor="@color/white"
            android:textSize="34sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:paddingTop="5dp"
            android:text="Why Enroll?"
            android:textColor="@color/gold"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/companyDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Learn essential landscaping skills that can help you build a career in gardening or start your own landscaping business. Gain practical knowledge about designing outdoor spaces and caring for gardens, plants, and lawns."
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:paddingTop="5dp" />

        <TextView
            android:id="@+id/header2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-smallcaps"
            android:paddingTop="5dp"
            android:text="Purpose"
            android:textColor="@color/gold"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/purpose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="quip individuals with the knowledge to respond to medical emergencies, administer CPR, and manage injuries until professional help arrives. Throughout the course, youâ€™ll complete hands-on projects, such as designing garden layouts, selecting and arranging plants, and incorporating fixed features like benches and fountains. By the end, you'll have a professional portfolio showcasing your landscaping designs, perfect for presenting to clients or employers."
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:paddingTop="5dp" />

        <TextView
            android:id="@+id/header3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:paddingTop="5dp"
            android:text="Fees"
            android:textColor="#FFD700"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/fees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:paddingTop="5dp"
            android:text="This course will take 6 months to complete.
Fees are R1500"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <Button
            android:id="@+id/backButton"
            android:layout_width="155dp"
            android:layout_height="59dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#BCB88A"
            android:text="Back"
            android:textColor="#0C0C0C" />

        <Button
            android:id="@+id/feesButton"
            android:layout_width="155dp"
            android:layout_height="59dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="50dp"
            android:backgroundTint="#BCB88A"
            android:text="Book Course"
            android:textColor="#0C0C0C" />


    </LinearLayout>

</ScrollView>
